@using System.Security.Claims
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
        <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="..." crossorigin="anonymous"></script>
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet">
    @if(ViewBag.Language == "ru")
    {
        ViewBag.Search = "Поиск...";
    }
    else
    {
        ViewBag.Search = "Search...";
    }
    @{
        string? userId = null;

        if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            ViewBag.userIdToken = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        }

        var path = Context.Request.Path.Value?.ToLower() ?? "";
        ViewBag.isAuthPage = path.Contains("/auth/login") || path.Contains("/auth/registration");
    }

    @RenderSection("Head", required: false)
    <style>
        /* Определяем переменные внутри :root */
        :root {
            --primary-blue: #0d6efd !important;
            --light-blue: #e7f1ff !important;
            --hover-blue: #0b5ed7 !important;
        }
        
        body {
            background: #f8f9fa;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            min-height: 100vh;
        }

        .my-header {
            background: #fff;
            border-bottom: 1px solid #0d6efd30;
            box-shadow: 0 2px 4px #0d6efd0d;
            padding: 10px 0;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            height: 60px;
        }

        .header-brand {
            font-weight: 600;
            font-size: 1.5rem;
            color: #0d6efd;
            text-decoration: none;
            transition: color 0.2s;
        }

        .header-brand:hover {
            color: #0b5ed7;
        }

        .profile-icon {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            padding: 4px;
            transition: all 0.2s;
            border: 2px solid var(--primary-blue);
        }

        .profile-icon:hover {
            background: var(--light-blue);
        }

        .search-bar input {
            max-width: 300px;
            border-radius: 20px;
            border: 1px solid rgba(13, 110, 253, 0.2);
            padding: 0.375rem 1rem;
            transition: all 0.2s;
        }

        .search-bar input:focus {
            border-color: var(--primary-blue);
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

        .sidebar {
            position: fixed;
            top: 60px;
            left: 0;
            width: 280px; /* Увеличена ширина с 200px до 280px */
            height: calc(100vh - 60px);
            background: #fff;
            border-right: 1px solid #0d6efd30;
            padding: 1.5rem; /* Увеличен отступ */
            overflow-y: auto;
            z-index: 100;
        }

        .sidebar h6 {
            color: var(--primary-blue);
            font-size: 0.8rem;
            font-weight: 600;
            margin-top: 1.5rem;
            margin-bottom: 0.5rem;
        }

        .sidebar .nav-link {
            color: #495057;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            transition: all 0.2s;
            font-size: 0.9rem;
            margin-bottom: 0.2rem;
        }

        .sidebar .nav-link:hover {
            background: var(--light-blue);
            color: var(--primary-blue);
        }

        .sidebar hr {
            margin: 1rem 0;
            border-color: rgba(13, 110, 253, 0.1);
        }

        .admin-link {
            color: #495057;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            transition: all 0.2s;
            font-size: 0.9rem;
            text-decoration: none;
            display: block;
            margin-top: 1rem;
            background: none;
            border: none;
            width: 100%;
            text-align: left;
        }

        .admin-link:hover {
            background: var(--light-blue);
            color: var(--primary-blue);
        }

        .main-content {
            margin-left: 280px; /* Соответствует новой ширине sidebar */
            margin-top: 60px;
            padding: 1.5rem;
            max-width: calc(100vw - 280px);
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
            border-radius: 0.2rem;
        }
    </style>
</head>

<body>
        @if (IsSectionDefined("Header"))
        {
            <header>
        @RenderSection("Header", required: false)
        </header>
        }
        else
        {
            <header>
            <div class="my-header navbar-expand-lg navbar-light">
                <div class="container">
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <!-- Логотип -->
                        <a class="header-brand" href="#">CFork</a>
                        <!-- Иконка профиля -->
                        <div class="header-item">
                            <a class="header-link" href="#">
                                <img src="~/images/fire (1).svg" alt="Profile" class="profile-icon">
                            </a>
                        </div>
                        <!-- Поиск -->
                        <form class="search-bar ms-auto d-flex align-items-center" method="get" action="/Post/Search">
                            <input type="text" class="form-control" name="name" placeholder="@ViewBag.Search" />
                        </form>

                        <div class="ms-auto d-flex align-items-center gap-2">
                            <button type="button" class="btn btn-sm @(ViewBag.Language == "ru" ? "btn-primary" : "btn-outline-primary")" onclick="setLanguage('ru')">ru</button>
                            <button type="button" class="btn btn-sm @(ViewBag.Language == "eng" ? "btn-primary" : "btn-outline-primary")" onclick="setLanguage('eng')">eng</button>
                        </div>

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <button type="button" class="btn btn-sm btn-danger ms-2" onclick="logout()">Выйти</button>
                        }
                    </div>
                </div>
            </div>
            </header>

        }
    @if (!ViewBag.isAuthPage)
    {
        <div class="sidebar">
            <a href="/Home/@ViewBag.userIdToken" class="nav-link">Home</a>
            <a href="/Popular/@ViewBag.userIdToken" class="nav-link">Popular</a>
            <a href="/Community/Explore" class="nav-link">Explore</a>
            <a href="/New/@ViewBag.userIdToken" class="nav-link">New</a>

            <hr>

            <h6>TO LIGHT FIRE</h6>
            <a href="/Post/Create" class="nav-link">- Create a custom post</a>

            <hr>

            <h6>CREATE CAMPFIRE</h6>
            <a href="/Community/Create" class="nav-link">- Create a community</a>

            <hr>

            <h6>RESOURCES</h6>
            <a href="#" class="nav-link">About</a>
            <a href="#" class="nav-link">Help</a>

            <hr>

            <h6>THE BESTS</h6>
            <a href="#" class="nav-link">Communities</a>
            <a href="#" class="nav-link">Fires</a>

            @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <a href="/Admin/Panel" class="admin-link">Admin Panel</a>
            }
        </div>
    }
    <div class="main-content">
        @RenderSection("Body", required: false)
    </div>
        @RenderSection("Script", required: false);
            <script>
        function setLanguage(language) {
            // Сохраняем куку
            document.cookie = "Language=" + language + "; path=/; max-age=" + 60 * 60 * 24 * 30;

            // Перезагрузка с добавлением параметра language в URL
            const currentUrl = new URL(window.location.href);
            currentUrl.searchParams.set("lang", language);
            window.location.href = currentUrl.toString();
        }

        function logout() {
            fetch('/Auth/logout', {
                method: 'POST',
                credentials: 'include'
            })
                .then(() => {
                    window.location.href = '/Auth/Login';
                });
        }
    </script>
</body>
<footer>

</footer>
</html>
