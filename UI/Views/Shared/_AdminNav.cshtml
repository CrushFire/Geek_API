@{
    var language = ViewBag.Language as string ?? "eng";
}

<div class="admin-nav-top mb-4" style="width:100%;box-sizing:border-box;">
    <div style="display:flex;flex:1;gap:0.5rem;flex-wrap:wrap;">
        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Users" ? "active" : "")" href="/Admin/Users">
            <i class="bi bi-people"></i> @(language == "ru" ? "Пользователи" : "Users")
        </a>
        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Posts" ? "active" : "")" href="/Admin/Posts">
            <i class="bi bi-file-earmark-text"></i> @(language == "ru" ? "Посты" : "Posts")
        </a>
        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Communities" ? "active" : "")" href="/Admin/Communities">
            <i class="bi bi-collection"></i> @(language == "ru" ? "Сообщества" : "Communities")
        </a>
        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Categories" ? "active" : "")" href="/Admin/Categories">
            <i class="bi bi-tags"></i> @(language == "ru" ? "Категории" : "Categories")
        </a>
        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Comments" ? "active" : "")" href="/Admin/Comments">
            <i class="bi bi-chat-left-text"></i> @(language == "ru" ? "Комментарии" : "Comments")
        </a>
        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active" : "")" href="/Admin/AboutEdit">
            <i class="bi bi-info-circle"></i> @(language == "ru" ? "О нас" : "About")
        </a>
    </div>
</div>
