@using Core.Models
@using System.Security.Claims
@model UserResponse

@{
    var language = ViewBag.Language;
    var avatarImage = Model.Images?.FirstOrDefault(i => i.ImageType == "avatar" && i.Id == Model.Id && i.EntityTarget == "User");
    var userIdToken = ViewBag.userIdToken;
}

@section Head {
}

@section Body {
    <div class="admin-page-container">
        <div class="user-profile-box">
            <div class="row">
                <!-- Аватар и инфо -->
                <div class="col-md-4">
                    <div class="user-avatar-container">
                        @if (avatarImage != null && !string.IsNullOrEmpty(avatarImage.ImageUrl))
                        {
                            <div class="user-avatar" onclick="openImageModal('@avatarImage.ImageUrl')">
                                <img src="@avatarImage.ImageUrl" alt="Avatar" />
                            </div>
                        }
                        else
                        {
                            <div class="user-avatar user-avatar-placeholder">
                                @Model.UserName.Substring(0, 1).ToUpper()
                            </div>
                        }

                        <div class="user-stats">
                            <div class="stat-item">
                                <h5>@Model.NumberOfLikes</h5>
                                <p>Likes 💙</p>
                            </div>
                            <div class="stat-item">
                                <h5>@Model.NumberOfPosts</h5>
                                <p>Posts 📚</p>
                            </div>
                            <div class="stat-item">
                                <h5>@Model.NumberOfComments</h5>
                                <p>Comments 💬</p>
                            </div>
                            <div class="stat-item">
                                <h5>@Model.NumberOfCommunities</h5>
                                <p>Subscribes 👥</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Профиль -->
                <div class="col-md-8">
                    <div class="user-info">
                        <div class="info-item">
                            <label>Username</label>
                            <div class="info-value">@Model.UserName</div>
                        </div>

                        <div class="info-item">
                            <label>Description</label>
                            <div class="info-value description">@Model.Description</div>
                        </div>
                    </div>
                </div>
            </div>

            <hr class="divider">

            <div class="user-content-nav">
                <button class="content-nav-btn" onclick="loadLikedPosts()">User Liked Posts</button>
                <button class="content-nav-btn" onclick="loadPublishedPosts()">User Posts</button>
                <button class="content-nav-btn" onclick="loadSubscribedCommunities()">User Subscriptions</button>
                <button class="content-nav-btn" onclick="loadOwnedCommunities()">User Communities</button>
            </div>

            <div class="posts-container" id="posts"></div>
        </div>

        <div id="imageModalSimple" class="image-modal" onclick="closeImageModal()">
            <img id="modalImageSimple" class="image-modal-content" onclick="event.stopPropagation()" />
        </div>
    </div>
</div>
}

