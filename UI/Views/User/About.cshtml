@model Core.Models.AboutImages

@{
    ViewData["Title"] = "О нас";
    var language = ViewBag.Language as string ?? "ru";
    var userId = ViewBag.UserId;
    var pageData = ViewBag.pageData;
}

@section Head {
    <!-- сюда твои стили, оставь без изменений -->
    <style>
        .about-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.1);
        }

        .about-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .about-title {
            color: #003366;
            margin-bottom: 1rem;
            font-weight: 700;
            letter-spacing: 1px;
        }

        .about-lead {
            color: #666;
            font-size: 1.15rem;
            margin-bottom: 0;
        }

        /* Карусель */
        .carousel {
            border-radius: 16px;
            overflow: visible;
            background: transparent;
            margin-bottom: 2rem;
            position: relative; /* Для абсолютного позиционирования стрелок */
        }

        .carousel-image-frame {
            width: 660px;
            height: 340px;
            margin: 0 auto;
            border: 4px solid #003366;
            border-radius: 18px;
            background: #f8f9fa;
            box-shadow: 0 4px 16px rgba(0,0,0,0.10);
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .carousel-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
            border-radius: 14px;
            transition: opacity 0.3s;
            background: #e9ecef;
            /* Новое: предотвращаем изменение размеров контейнера */
            max-width: 100%;
            max-height: 100%;
            display: block;
        }

        .carousel-caption {
            position: absolute;
            left: 0;
            bottom: 0;
            /* Новое: выравнивание по левому нижнему углу */
            right: auto;
            top: auto;
            background: rgba(0,0,0,0.68);
            border-radius: 0 14px 14px 0;
            padding: 1rem 1.5rem 1rem 1.2rem;
            color: #fff;
            text-align: left;
            width: auto;
            min-width: 220px;
            max-width: 70%;
            margin: 0;
            margin-bottom: 1.2rem;
            margin-left: 1.2rem;
            /* Тень для читаемости */
            box-shadow: 0 2px 8px rgba(0,0,0,0.18);
        }

            .carousel-caption h3 {
                margin: 0 0 0.3rem 0;
                font-size: 1.15rem;
                font-weight: 600;
                color: #fff;
                text-shadow: 1px 1px 4px rgba(0,0,0,0.4);
            }

            .carousel-caption p {
                margin: 0;
                font-size: 0.98rem;
                color: #e0e0e0;
                text-shadow: 1px 1px 2px rgba(0,0,0,0.4);
            }

        .carousel-control-prev,
        .carousel-control-next {
            width: 42px;
            height: 42px;
            background: none; /* убираем фон */
            border-radius: 0; /* убираем скругление */
            top: 50%;
            transform: translateY(-50%);
            opacity: 0.9;
            margin: 0;
            border: none;
            box-shadow: none;
            display: flex;
            align-items: center;
            justify-content: center;
            position: absolute;
            z-index: 2;
            /* Новое: выносим стрелки за пределы картинки */
        }

        .carousel-control-prev {
            left: -56px; /* Сдвиг влево за пределы картинки */
        }

        .carousel-control-next {
            right: -56px; /* Сдвиг вправо за пределы картинки */
        }

        @@media (max-width: 900px) {
            .carousel-control-prev,
            .carousel-control-next {
                left: 0 !important;
                right: 0 !important;
                /* Для мобильных — возвращаем стрелки внутрь */
            }
        }

        .carousel-control-prev:hover,
        .carousel-control-next:hover {
            background: none;
            opacity: 1;
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            width: 2rem;
            height: 2rem;
            background-color: transparent;
            border-radius: 0;
            filter: none;
            box-shadow: none;
            background-size: 100% 100%;
            /* Новый стиль стрелок: SVG с темно-синим цветом */
        }

        .carousel-control-prev-icon {
            background-image: url("data:image/svg+xml;charset=utf8,<svg xmlns='http://www.w3.org/2000/svg' width='32' height='32' fill='none' stroke='%23003366' stroke-width='3' stroke-linecap='round' stroke-linejoin='round' viewBox='0 0 24 24'><polyline points='15 18 9 12 15 6'/></svg>");
        }

        .carousel-control-next-icon {
            background-image: url("data:image/svg+xml;charset=utf8,<svg xmlns='http://www.w3.org/2000/svg' width='32' height='32' fill='none' stroke='%23003366' stroke-width='3' stroke-linecap='round' stroke-linejoin='round' viewBox='0 0 24 24'><polyline points='9 6 15 12 9 18'/></svg>");
        }

        /* Основной контент */
        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin-top: 2.5rem;
        }

        .feature-card {
            text-align: center;
            padding: 2rem 1.2rem;
            background: #f8f9fa;
            border-radius: 8px;
            transition: transform 0.2s;
            min-height: 180px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
        }

            .feature-card:hover {
                transform: translateY(-5px);
            }

            .feature-card i {
                font-size: 2.2rem;
                color: #003366;
                margin-bottom: 1rem;
            }

            .feature-card h3 {
                color: #003366;
                margin-bottom: 0.7rem;
                font-size: 1.1rem;
                font-weight: 600;
            }

            .feature-card p {
                color: #666;
                font-size: 1rem;
                margin-bottom: 0;
            }
    </style>
}

@section Body {
    <div class="app-wrapper">
        <div class="main-content">
            <div class="about-container">
                <div class="about-header">
                    <h1 class="about-title">@pageData.From("LeadTitle")</h1>
                    <p class="lead about-lead">@pageData.From("LeadText")</p>
                </div>

                <!-- КАРУСЕЛЬ С КАРТИНКАМИ -->
                @if (Model.Images != null && Model.Images.Any(i => !string.IsNullOrEmpty(i.ImageUrl)))
                {
                    <div class="d-flex justify-content-center">
                        <div id="featureCarousel" class="carousel slide mb-5" data-bs-ride="carousel" style="width: 700px;">
                            <div class="carousel-inner">
                                @for (int i = 0; i < Model.Images.Count; i++)
                                {
                                    var img = Model.Images[i];
                                    var title = pageData.From($"ImageTitle{img.EntityId}");
                                    var content = pageData.From($"ImageContent{img.EntityId}");

                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                        <div class="carousel-image-frame">
                                            @if (!string.IsNullOrEmpty(img.ImageUrl))
                                            {
                                                <img src="@img.ImageUrl" class="carousel-image" alt="Slide @(i + 1)" />
                                            }
                                            else
                                            {
                                                <div class="carousel-image" style="opacity:0.2; background:#ccc;"></div>
                                            }
                                            <div class="carousel-caption">
                                                <h3>@title</h3>
                                                <p>@content</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                            <button class="carousel-control-prev" type="button" data-bs-target="#featureCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#featureCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                }

                <!-- ОСНОВНОЙ КОНТЕНТ -->
                <div class="features-grid">
                    <div class="feature-card">
                        <i class="bi bi-people-fill"></i>
                        <h3>@pageData.From("CardTitle1")</h3>
                        <p>@pageData.From("Card1")</p>
                    </div>
                    <div class="feature-card">
                        <i class="bi bi-chat-dots-fill"></i>
                        <h3>@pageData.From("CardTitle2")</h3>
                        <p>@pageData.From("Card2")</p>
                    </div>
                    <div class="feature-card">
                        <i class="bi bi-share-fill"></i>
                        <h3>@pageData.From("CardTitle3")</h3>
                        <p>@pageData.From("Card3")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Script {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const carousel = new bootstrap.Carousel(document.getElementById('featureCarousel'), {
                interval: 10000,
                wrap: true
            });
            document.querySelectorAll('.carousel-image').forEach(img => {
                img.onerror = function () {
                    this.style.opacity = '0.2';
                };
            });
        });
    </script>
}
