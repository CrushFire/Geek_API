        document.addEventListener("click", async function (event) {
            if (event.target.classList.contains("join-btn")) {
                const button = event.target;
                const communityId = parseInt(button.dataset.communityId);
                const isJoined = button.classList.contains("btn-primary");

                const url = isJoined ? "/sub" : "/unsub";
                const method = isJoined ? "POST" : "DELETE";

                try {
                    const res = await fetch(url, {
                        method: method,
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify(communityId) // передаём только ID сообщества
                    });

                    const success = await res.json();

                    if (success === true) {
                        if (isJoined) {
                            // Отписался
                            button.classList.remove("btn-primary");
                            button.classList.add("btn-light");
                            button.textContent = "Unjoin";
                            button.style.color = "#888";
                            button.style.borderColor = "#ccc";
                        } else {
                            // Подписался
                            button.classList.remove("btn-light");
                            button.classList.add("btn-primary");
                            button.textContent = "Joined";
                            button.style.color = "white";
                            button.style.borderColor = "";
                        }
                    } else {
                        alert(language === "ru" ? "Ошибка подписки." : "Subscription failed.");
                    }
                } catch (error) {
                    console.error("Ошибка при подписке:", error);
                    alert(language === "ru" ? "Ошибка сети." : "Network error.");
                }
            }
        });


