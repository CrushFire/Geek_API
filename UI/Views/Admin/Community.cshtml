@using System.Text.Json
@{
    ViewData["Title"] = "Управление сообществами";
    var language = ViewBag.Language;

    var filter = ViewBag.pageData.From("Filter");
    var postName = ViewBag.pageData.From("PostName");
    var communityName = ViewBag.pageData.From("CommunityName");
    var content = ViewBag.pageData.From("Content");
    var contentComment = ViewBag.pageData.From("ContentComment");
    var prev = ViewBag.pageData.From("Prev");
    var next = ViewBag.pageData.From("Next");
    var nameRu = ViewBag.pageData.From("NameRu");
    var nameEng = ViewBag.pageData.From("NameEng");
    var add = ViewBag.pageData.From("Add");
    var save = ViewBag.pageData.From("Save");
    var cancel = ViewBag.pageData.From("Cancel");
    var confDelete = Html.Raw(JsonSerializer.Serialize(ViewBag.pageData.From("ConfDelete")));
    var confMessage = Html.Raw(JsonSerializer.Serialize(ViewBag.pageData.From("ConfMessage")));
    var conf = ViewBag.pageData.From("Conf");
    var user = ViewBag.pageData.From("User");
    var post = ViewBag.pageData.From("Post");
    var community = ViewBag.pageData.From("Community");
    var category = ViewBag.pageData.From("Category");
    var comment = ViewBag.pageData.From("Comment");
    var titleUser = ViewBag.pageData.From("TitleUser");
    var titlePost = ViewBag.pageData.From("TitlePost");
    var titleCommunity = ViewBag.pageData.From("TitleCommunity");
    var titleCategory = ViewBag.pageData.From("TitleCategory");
    var titleComment = ViewBag.pageData.From("TitleComment");
    var userName = ViewBag.pageData.From("UserName");
}

@section Head {
    <style>
        .modal-confirm-community {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
            z-index: 1050;
            width: 90%;
            max-width: 400px;
        }

        .modal-backdrop-custom {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background-color: rgba(0, 0, 0, 0.4);
            z-index: 1040;
        }

        .modal-confirm-role {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
            z-index: 1050;
            width: 90%;
            max-width: 400px;
        }

        .modal-footer {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
        }

        .modal-title {
            font-weight: bold;
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }
    </style>
}

@section Body {
    <div class="app-wrapper">
        <div class="main-content">
            <div class="container py-4">
                <div class="card p-4 shadow" style="border-radius: 1rem;">
                @await Html.PartialAsync("_AdminNav")
                <div class="row mb-4">
                    <div class="col">
                        <h2 class="fw-bold">@titleCommunity</h2>
                    </div>
                </div>

                <!-- Фильтр только по названию -->
                <div class="filter-panel mb-4">
                    <form id="communityFilterForm" class="row g-2 align-items-end">
                        <div class="col-md-4">
                            <label class="form-label mb-1">@communityName</label>
                            <input type="text" class="form-control" id="filterName" placeholder="@communityName">
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100"><i class="bi bi-funnel"></i> @filter</button>
                        </div>
                    </form>
                </div>

                <!-- Таблица сообществ -->
                <div class="communities-table position-relative">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="communitiesTable">
                            <thead class="table-header">
                                <tr>
                                        <th>ID</th>
                                        <th>@(language == "ru" ? "Заголовок" : "Title")</th>
                                        <th>@(language == "ru" ? "Автор" : "Author")</th>
                                        <th>@(language == "ru" ? "Дата" : "Date")</th>
                                        <th>@(language == "ru" ? "Действия" : "Actions")</th>
                                </tr>
                            </thead>
                            <tbody id="communitiesTableBody">
                                <!-- Данные будут загружены через JavaScript -->
                            </tbody>
                        </table>
                    </div>
                    <div class="pagination-controls">
                        <button id="prevPageBtn" class="btn btn-outline-secondary btn-sm">&larr; @prev</button>
                        <span id="pageInfo" class="align-self-center"></span>
                        <button id="nextPageBtn" class="btn btn-outline-secondary btn-sm">@next &rarr;</button>
                    </div>
                </div>

                <!-- Модальное окно подтверждения удаления -->
                <div id="communityModalBackdrop" class="modal-backdrop-custom" style="display:none;"></div>
                <div id="communityModal" class="modal-confirm-community" style="display:none;">
                    <div class="modal-title" id="communityModalTitle">@confDelete</div>
                    <div id="communityModalText" class="mb-3"></div>
                    <div class="modal-footer">
                        <button id="communityModalCancel" class="btn btn-secondary">@cancel</button>
                        <button id="communityModalConfirm" class="btn btn-danger">@conf</button>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
}

@section Script {
    <script>
        let currentPage = 1;
        let totalPages = 1;
        const pageSize = 20;
        let filter = {
            name: ""
        };

        let pendingDelete = { communityId: null, rowElem: null };

        async function loadCommunities(page = 1) {
            try {
                const params = new URLSearchParams();
                params.append("name", filter.name);
                params.append("curPage", page);

                const response = await fetch(`/community-filter/?${params.toString()}`);
                const data = await response.json();

                const tbody = document.getElementById('communitiesTableBody');
                tbody.innerHTML = '';

                totalPages = data.length < pageSize && page === 1 ? 1 : (data.length === pageSize ? page + 1 : page);

                currentPage = page;

                data.forEach(comm => {
                    const row = document.createElement("tr");
                    row.innerHTML = `
                        <td><a href="/community/${comm.id}" target="_blank">${comm.id}</a></td>
                        <td>${comm.communityName}</td>
                        <td>${comm.author?.userName || ""}</td>
                        <td>${comm.createAt ? new Date(comm.createAt).toLocaleDateString() : ""}</td>
                        <td class="action-buttons">
                            <button class="btn btn-sm btn-outline-danger" data-community-id="${comm.id}" title="Удалить">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    `;
                    tbody.appendChild(row);
                });

                // Обработчик для удаления
                document.querySelectorAll('.action-buttons .btn-outline-danger').forEach(btn => {
                    btn.addEventListener('click', function () {
                        const communityId = this.getAttribute('data-community-id');
                        showDeleteModal(communityId, this.closest('tr'));
                    });
                });

                document.getElementById('prevPageBtn').disabled = currentPage === 1;
                document.getElementById('nextPageBtn').disabled = data.length < pageSize;
                document.getElementById('pageInfo').textContent = `Страница ${currentPage}`;
            } catch (error) {
                console.error('Ошибка при загрузке сообществ:', error);
            }
        }

        // Модальное окно подтверждения удаления
        function showDeleteModal(communityId, rowElem) {
            pendingDelete = { communityId, rowElem };
            document.getElementById('communityModalTitle').innerText = @confDelete;
            document.getElementById('communityModalText').innerText = @confMessage;
            document.getElementById('communityModalBackdrop').style.display = 'block';
            document.getElementById('communityModal').style.display = 'block';
        }

        function hideCommunityModal() {
            document.getElementById('communityModalBackdrop').style.display = 'none';
            document.getElementById('communityModal').style.display = 'none';
            pendingDelete = { communityId: null, rowElem: null };
        }

        document.getElementById('communityModalCancel').onclick = hideCommunityModal;
        document.getElementById('communityModalBackdrop').onclick = hideCommunityModal;

        document.getElementById('communityModalConfirm').onclick = async function () {
            if (pendingDelete.communityId) {
                try {
                    const response = await fetch(`/Community/Delete?communityId=${pendingDelete.communityId}`, { method: "DELETE" });
                    if (response.ok) {
                        hideCommunityModal();
                        await loadCommunities(currentPage);
                    } else {
                        alert("Ошибка при удалении сообщества");
                        hideCommunityModal();
                    }
                } catch (error) {
                    alert("Ошибка при удалении сообщества");
                    hideCommunityModal();
                }
            }
        };

        // Фильтрация
        document.getElementById("communityFilterForm").addEventListener("submit", function (e) {
            e.preventDefault();
            filter.name = document.getElementById("filterName").value;
            loadCommunities(1);
        });

        document.getElementById('prevPageBtn').addEventListener('click', function () {
            if (currentPage > 1) loadCommunities(currentPage - 1);
        });

        document.getElementById('nextPageBtn').addEventListener('click', function () {
            loadCommunities(currentPage + 1);
        });

        document.addEventListener('DOMContentLoaded', () => {
            loadCommunities();
        });
    </script>
}
