@{
    ViewData["Title"] = "Управление сообществами";
}

@section Head {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .container.py-4 {
            padding-left: 0 !important;
            padding-right: 0 !important;
        }
        .admin-nav-top {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0,0,0,0.08);
            padding: 1rem 0.7rem;
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 0.7rem;
            flex-wrap: wrap;
        }
        .admin-nav-top .nav-link {
            font-size: 0.97rem;
            color: #333;
            font-weight: 500;
            border-radius: 6px;
            margin: 0 0.05rem;
            transition: background 0.15s;
            display: flex;
            align-items: center;
            gap: 0.2rem;
            padding: 0.35rem 0.7rem;
        }
        .admin-nav-top .nav-link.active, .admin-nav-top .nav-link:hover {
            background: #f3f7fa;
            color: #0d6efd;
            text-decoration: none;
        }
        .admin-panel-title {
            font-weight: bold;
            margin-right: 0.7rem;
            font-size: 0.97rem;
            display: flex;
            align-items: center;
            gap: 0.3rem;
        }
        .filter-panel {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0,0,0,0.08);
            padding: 1rem 0.7rem;
            margin-bottom: 1.5rem;
        }
        .communities-table {
            background: white;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }
        .table-header {
            background-color: #f8f9fa;
        }
        .action-buttons .btn {
            padding: 0.18rem 0.35rem;
            font-size: 0.82rem;
        }
        .pagination-controls {
            display: flex;
            justify-content: flex-end;
            gap: 0.3rem;
            margin-top: 1rem;
        }
        .modal-backdrop-custom {
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(0,0,0,0.4);
            z-index: 2000;
        }
        .modal-confirm-community {
            position: fixed;
            top: 50%; left: 50%;
            transform: translate(-50%, -50%);
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.15);
            z-index: 2100;
            padding: 1.1rem 0.8rem;
            min-width: 220px;
            max-width: 99vw;
        }
        .modal-confirm-community .modal-title {
            font-weight: bold;
            font-size: 1rem;
            margin-bottom: 0.5rem;
        }
        .modal-confirm-community .modal-footer {
            display: flex;
            justify-content: flex-end;
            gap: 0.5rem;
            margin-top: 0.7rem;
        }
        .table td, .table th {
            padding: 0.4rem 0.3rem;
            font-size: 0.95rem;
        }
    </style>
}

@section Body {
    <div class="app-wrapper">
        <div class="main-content">
            <div class="container py-4">
                <div class="card p-4 shadow" style="border-radius: 1rem;">
                @await Html.PartialAsync("_AdminNav")
                <div class="row mb-4">
                    <div class="col">
                        <h2 class="fw-bold">Управление сообществами</h2>
                    </div>
                </div>

                <!-- Фильтр только по названию -->
                <div class="filter-panel mb-4">
                    <form id="communityFilterForm" class="row g-2 align-items-end">
                        <div class="col-md-4">
                            <label class="form-label mb-1">Название сообщества</label>
                            <input type="text" class="form-control" id="filterName" placeholder="Название сообщества">
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100"><i class="bi bi-funnel"></i> Фильтровать</button>
                        </div>
                    </form>
                </div>

                <!-- Таблица сообществ -->
                <div class="communities-table position-relative">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="communitiesTable">
                            <thead class="table-header">
                                <tr>
                                    <th>ID</th>
                                    <th>Название</th>
                                    <th>Автор</th>
                                    <th>Дата</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody id="communitiesTableBody">
                                <!-- Данные будут загружены через JavaScript -->
                            </tbody>
                        </table>
                    </div>
                    <div class="pagination-controls">
                        <button id="prevPageBtn" class="btn btn-outline-secondary btn-sm">&larr; Назад</button>
                        <span id="pageInfo" class="align-self-center"></span>
                        <button id="nextPageBtn" class="btn btn-outline-secondary btn-sm">Вперёд &rarr;</button>
                    </div>
                </div>

                <!-- Модальное окно подтверждения удаления -->
                <div id="communityModalBackdrop" class="modal-backdrop-custom" style="display:none;"></div>
                <div id="communityModal" class="modal-confirm-community" style="display:none;">
                    <div class="modal-title" id="communityModalTitle">Подтвердите удаление</div>
                    <div id="communityModalText" class="mb-3"></div>
                    <div class="modal-footer">
                        <button id="communityModalCancel" class="btn btn-secondary">Отмена</button>
                        <button id="communityModalConfirm" class="btn btn-danger">Удалить</button>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
}

@section Script {
    <script>
        let currentPage = 1;
        let totalPages = 1;
        const pageSize = 20;
        let filter = {
            name: ""
        };

        let pendingDelete = { communityId: null, rowElem: null };

        async function loadCommunities(page = 1) {
            try {
                const params = new URLSearchParams();
                params.append("name", filter.name);
                params.append("curPage", page);

                const response = await fetch(`/community-filter/?${params.toString()}`);
                const data = await response.json();

                const tbody = document.getElementById('communitiesTableBody');
                tbody.innerHTML = '';

                totalPages = data.length < pageSize && page === 1 ? 1 : (data.length === pageSize ? page + 1 : page);

                currentPage = page;

                data.forEach(comm => {
                    const row = document.createElement("tr");
                    row.innerHTML = `
                        <td><a href="/community/${comm.id}" target="_blank">${comm.id}</a></td>
                        <td>${comm.communityName}</td>
                        <td>${comm.author?.userName || ""}</td>
                        <td>${comm.createAt ? new Date(comm.createAt).toLocaleDateString() : ""}</td>
                        <td class="action-buttons">
                            <button class="btn btn-sm btn-outline-danger" data-community-id="${comm.id}" title="Удалить">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    `;
                    tbody.appendChild(row);
                });

                // Обработчик для удаления
                document.querySelectorAll('.action-buttons .btn-outline-danger').forEach(btn => {
                    btn.addEventListener('click', function () {
                        const communityId = this.getAttribute('data-community-id');
                        showDeleteModal(communityId, this.closest('tr'));
                    });
                });

                document.getElementById('prevPageBtn').disabled = currentPage === 1;
                document.getElementById('nextPageBtn').disabled = data.length < pageSize;
                document.getElementById('pageInfo').textContent = `Страница ${currentPage}`;
            } catch (error) {
                console.error('Ошибка при загрузке сообществ:', error);
            }
        }

        // Модальное окно подтверждения удаления
        function showDeleteModal(communityId, rowElem) {
            pendingDelete = { communityId, rowElem };
            document.getElementById('communityModalTitle').innerText = "Подтвердите удаление";
            document.getElementById('communityModalText').innerText = `Вы уверены, что хотите удалить сообщество #${communityId}?`;
            document.getElementById('communityModalBackdrop').style.display = 'block';
            document.getElementById('communityModal').style.display = 'block';
        }

        function hideCommunityModal() {
            document.getElementById('communityModalBackdrop').style.display = 'none';
            document.getElementById('communityModal').style.display = 'none';
            pendingDelete = { communityId: null, rowElem: null };
        }

        document.getElementById('communityModalCancel').onclick = hideCommunityModal;
        document.getElementById('communityModalBackdrop').onclick = hideCommunityModal;

        document.getElementById('communityModalConfirm').onclick = async function () {
            if (pendingDelete.communityId) {
                try {
                    const response = await fetch(`/Community/Delete?communityId=${pendingDelete.communityId}`, { method: "DELETE" });
                    if (response.ok) {
                        hideCommunityModal();
                        await loadCommunities(currentPage);
                    } else {
                        alert("Ошибка при удалении сообщества");
                        hideCommunityModal();
                    }
                } catch (error) {
                    alert("Ошибка при удалении сообщества");
                    hideCommunityModal();
                }
            }
        };

        // Фильтрация
        document.getElementById("communityFilterForm").addEventListener("submit", function (e) {
            e.preventDefault();
            filter.name = document.getElementById("filterName").value;
            loadCommunities(1);
        });

        document.getElementById('prevPageBtn').addEventListener('click', function () {
            if (currentPage > 1) loadCommunities(currentPage - 1);
        });

        document.getElementById('nextPageBtn').addEventListener('click', function () {
            loadCommunities(currentPage + 1);
        });

        document.addEventListener('DOMContentLoaded', () => {
            loadCommunities();
        });
    </script>
}
